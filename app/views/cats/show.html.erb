<h1><%= @cat.name %></h1>
<table>
    <tbody>
        <tr>
            <th>Birth Date</th>
            <td><%= @cat.birth_date %></td>
        </tr>
        <tr>
            <th>Sex</th>
            <td><%= @cat.sex %></td>
        </tr>
        <tr>
            <th>Color</th>
            <td><%= @cat.color.capitalize %></td>
        </tr>
        <tr>
            <th>Description</th>
            <td><%= @cat.description %></td>
        </tr>
    </tbody>
</table>

<h2>Rental Requests</h2>
<table>
    <tr>
        <th>Start Date</th>
        <th>End Date</th>
        <th>Status</th>
    </tr>
    <tbody>
    <% @rentals.each do |rental| %>
        <tr>
            <td><%= rental.start_date %></td>
            <td><%= rental.end_date %></td>
            <td><%= rental.status %></td>
        </tr>
    <% end %>
    </tbody>
</table>